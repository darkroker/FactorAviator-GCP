# üöÄ Configuraci√≥n de Entorno GCP - Aviator Trading System
# ================================================================
# Este archivo contiene las variables de entorno espec√≠ficas para
# el despliegue del sistema Aviator en Google Cloud Platform
# ================================================================

# üåê CONFIGURACI√ìN DE GCP
# ================================================================
GCP_PROJECT_ID=aviator-trading-system
GCP_REGION=us-central1
GCP_ZONE=us-central1-a
GCP_ENVIRONMENT=production

# üîê CREDENCIALES Y AUTENTICACI√ìN
# ================================================================
GOOGLE_APPLICATION_CREDENTIALS=./credentials/aviator-gcp-credentials.json
GCP_SERVICE_ACCOUNT_EMAIL=aviator-deployment-sa@aviator-trading-system.iam.gserviceaccount.com

# üñ•Ô∏è COMPUTE ENGINE
# ================================================================
GCE_INSTANCE_NAME=aviator-app-instance
GCE_MACHINE_TYPE=e2-standard-4
GCE_DISK_SIZE=50GB
GCE_DISK_TYPE=pd-ssd
GCE_IMAGE_FAMILY=ubuntu-2004-lts
GCE_IMAGE_PROJECT=ubuntu-os-cloud
GCE_NETWORK=aviator-vpc
GCE_SUBNET=aviator-subnet
GCE_TAGS=aviator-app,http-server,https-server

# üóÑÔ∏è CLOUD SQL (PostgreSQL)
# ================================================================
CLOUD_SQL_INSTANCE_NAME=aviator-db-instance
CLOUD_SQL_DATABASE_VERSION=POSTGRES_14
CLOUD_SQL_TIER=db-f1-micro
CLOUD_SQL_REGION=us-central1
CLOUD_SQL_STORAGE_SIZE=20GB
CLOUD_SQL_STORAGE_TYPE=SSD
CLOUD_SQL_BACKUP_ENABLED=true
CLOUD_SQL_BACKUP_START_TIME=03:00

# üìä BASE DE DATOS
# ================================================================
DB_HOST=127.0.0.1
DB_PORT=5432
DB_NAME=aviator_trading
DB_USER=aviator_user
DB_PASSWORD=SecurePassword123!
DB_SSL_MODE=require
DB_CONNECTION_POOL_SIZE=20
DB_CONNECTION_TIMEOUT=30

# üî¥ REDIS (MEMORY STORE)
# ================================================================
REDIS_INSTANCE_NAME=aviator-redis-instance
REDIS_TIER=STANDARD_HA
REDIS_MEMORY_SIZE=1
REDIS_REGION=us-central1
REDIS_VERSION=REDIS_6_X
REDIS_HOST=10.0.0.3
REDIS_PORT=6379
REDIS_AUTH_ENABLED=true
REDIS_PASSWORD=RedisSecurePassword123!

# ü™£ CLOUD STORAGE
# ================================================================
GCS_BUCKET_NAME=aviator-trading-storage
GCS_BUCKET_REGION=us-central1
GCS_BUCKET_CLASS=STANDARD
GCS_LOGS_BUCKET=aviator-logs-bucket
GCS_BACKUPS_BUCKET=aviator-backups-bucket

# üîí SECRET MANAGER
# ================================================================
SECRET_MANAGER_PROJECT_ID=aviator-trading-system
DB_PASSWORD_SECRET=projects/aviator-trading-system/secrets/db-password/versions/latest
REDIS_PASSWORD_SECRET=projects/aviator-trading-system/secrets/redis-password/versions/latest
API_KEYS_SECRET=projects/aviator-trading-system/secrets/api-keys/versions/latest
JWT_SECRET=projects/aviator-trading-system/secrets/jwt-secret/versions/latest

# üåê NETWORKING
# ================================================================
VPC_NAME=aviator-vpc
SUBNET_NAME=aviator-subnet
SUBNET_RANGE=10.0.0.0/24
FIREWALL_RULE_HTTP=aviator-allow-http
FIREWALL_RULE_HTTPS=aviator-allow-https
FIREWALL_RULE_SSH=aviator-allow-ssh
LOAD_BALANCER_NAME=aviator-lb

# üìà MONITORING Y LOGGING
# ================================================================
MONITORING_ENABLED=true
LOGGING_ENABLED=true
ALERT_EMAIL=admin@aviator-trading.com
MONITORING_WORKSPACE=aviator-monitoring
LOG_LEVEL=INFO
METRICS_COLLECTION_INTERVAL=60

# üöÄ APLICACI√ìN
# ================================================================
APP_NAME=aviator-trading-system
APP_VERSION=1.0.0
APP_PORT=8080
APP_HOST=0.0.0.0
APP_WORKERS=4
APP_MAX_CONNECTIONS=1000
APP_TIMEOUT=30

# üéÆ AVIATOR GAME CONFIGURATION
# ================================================================
AVIATOR_GAME_URL=https://aviator.spribe.io
AVIATOR_API_ENDPOINT=wss://aviator-api.spribe.io/websocket
AVIATOR_SESSION_TIMEOUT=300
AVIATOR_MAX_BET_AMOUNT=1000
AVIATOR_MIN_BET_AMOUNT=1
AVIATOR_AUTO_CASHOUT_ENABLED=true
AVIATOR_DEFAULT_CASHOUT_MULTIPLIER=2.0

# üí∞ TRADING CONFIGURATION
# ================================================================
TRADING_ENABLED=true
TRADING_MODE=LIVE
MAX_DAILY_LOSS=500
MAX_SESSION_LOSS=100
RISK_MANAGEMENT_ENABLED=true
STOP_LOSS_PERCENTAGE=5
TAKE_PROFIT_PERCENTAGE=10
POSITION_SIZE_PERCENTAGE=2
BANKROLL_MANAGEMENT=true
INITIAL_BANKROLL=10000

# ü§ñ AUTOMATION
# ================================================================
AUTO_TRADING_ENABLED=false
AUTO_ANALYSIS_ENABLED=true
PATTERN_RECOGNITION_ENABLED=true
MACHINE_LEARNING_ENABLED=true
BACKTEST_ENABLED=true
PAPER_TRADING_ENABLED=true

# üìä ANALYTICS
# ================================================================
ANALYTICS_ENABLED=true
DATA_COLLECTION_ENABLED=true
PERFORMANCE_TRACKING_ENABLED=true
REPORTING_ENABLED=true
DATA_RETENTION_DAYS=365
ANALYTICS_EXPORT_FORMAT=JSON

# üîî NOTIFICATIONS
# ================================================================
NOTIFICATIONS_ENABLED=true
EMAIL_NOTIFICATIONS=true
SMS_NOTIFICATIONS=false
PUSH_NOTIFICATIONS=true
DISCORD_WEBHOOK_ENABLED=false
TELEGRAM_BOT_ENABLED=false

# üõ°Ô∏è SECURITY
# ================================================================
SECURITY_ENABLED=true
SSL_ENABLED=true
SSL_CERT_PATH=/etc/ssl/certs/aviator.crt
SSL_KEY_PATH=/etc/ssl/private/aviator.key
RATE_LIMITING_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100
CORS_ENABLED=true
CORS_ALLOWED_ORIGINS=https://aviator-trading.com
CSRF_PROTECTION_ENABLED=true
XSS_PROTECTION_ENABLED=true

# üîß DEVELOPMENT
# ================================================================
DEBUG_MODE=false
DEVELOPMENT_MODE=false
TEST_MODE=false
PROFILING_ENABLED=false
HOT_RELOAD_ENABLED=false

# üì¶ DOCKER
# ================================================================
DOCKER_IMAGE_NAME=aviator-trading-app
DOCKER_IMAGE_TAG=latest
DOCKER_REGISTRY=gcr.io/aviator-trading-system
DOCKER_COMPOSE_FILE=docker-compose.gcp.yml

# ‚òÅÔ∏è CLOUD BUILD
# ================================================================
CLOUD_BUILD_ENABLED=true
CLOUD_BUILD_TRIGGER_NAME=aviator-build-trigger
CLOUD_BUILD_REPO_NAME=aviator-trading-system
CLOUD_BUILD_BRANCH=main

# üîÑ BACKUP
# ================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESSION=true
BACKUP_ENCRYPTION=true

# üåç TIMEZONE
# ================================================================
TIMEZONE=UTC
LOCALE=en_US.UTF-8

# üìù LOGGING ESPEC√çFICO
# ================================================================
LOG_FORMAT=json
LOG_OUTPUT=stdout
LOG_FILE_PATH=/var/log/aviator/app.log
LOG_MAX_SIZE=100MB
LOG_MAX_FILES=10
LOG_COMPRESS=true

# üéØ PERFORMANCE
# ================================================================
PERFORMANCE_MONITORING=true
MEMORY_LIMIT=2GB
